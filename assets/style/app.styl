@import '~vuetify/src/stylus/main'

box-shadow(args...)
    -webkit-box-shadow args
    box-shadow args

.theme--light.application
    background-color #fff

.container
    @media screen and (min-width: 1904px)
        max-width 1185px

.header
    border-top 1px solid rgba(0, 0, 0, 0.12)
    background-color #fff

    .container
        padding 0

.v-toolbar__items
    .v-btn
        font-size 16px
        border-radius 0

        &:not(.v-btn--active)
            color #757575

        &:before
            top auto
            bottom 0
            height 3px
            opacity 0.3

        &.v-btn--active
            color #003459

            &:before
                opacity 1
                background-color #003459

.v-btn
    margin 0
    text-transform none

.v-speed-dial,
.v-datatable__actions
    .v-btn
        margin 6px 8px

.v-pagination__item,
.v-pagination__navigation
    font-weight 500
    box-shadow none
    outline none

    &:not(.v-pagination__item--active)
        background-color #f5f5f5 !important
        color #757575 !important

.v-carousel__controls
    background-color transparent !important

.v-list
    padding 0

.v-list__tile
    &.v-list__tile--active
        .v-icon
            color #003459

        .v-list__tile__title
            font-weight 500

.jumbo-title
    line-height 1
    letter-spacing: -2px !important;
    font-size 34px
    font-weight 300
    text-align center
    color #616161

    @media screen and (min-width: 600px)
        font-size 56px

    @media screen and (min-width: 960px)
        font-size 74px

    @media screen and (min-width: 1264px)
        margin-bottom 80px

    @media screen and (min-width: 1904px)
        font-size 96px
        margin-bottom 140px
